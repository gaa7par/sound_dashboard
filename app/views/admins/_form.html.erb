<%= simple_form_for @admin do |f| %>
  <% if @admin.errors.any? %>
    <strong><%= pluralize(@admin.errors.count, "error") %> found:</strong>
    <ul>
      <% @admin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.button :submit %>
<% end %>
